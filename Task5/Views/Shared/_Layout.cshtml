<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</head>
<body>
    <nav class="navbar is-info">
        <div class="container">
            <div class="navbar-brand">
                <!-- <div class="navbar-header"> -->
                <!-- <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button> -->
                <a href="/">
                    <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28"
                         alt="Vue is the best" background-color="#fffff" />
                </a>
                <!-- @Html.ActionLink("Task 5", "Index", "Home", new { area = "" }) -->
                <!-- </div> -->
            </div>
            <div class="navbar-menu">
                <div class="navbar-start">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-item" })
                    @Html.ActionLink("API", "Index", "Help", new { area = "" }, new { @class = "navbar-item" })
                    @Html.ActionLink("Stripe Task", "StripeView", "Stripe", new { area = "" }, new { @class = "navbar-item" })
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            Talent Photo
                        </a>

                        <div class="navbar-dropdown">
                            <a href="~/TalentPhoto/" class="navbar-item">
                                Manage Talent Photos
                            </a>
                            <a href="~/TalentPhoto/Upload" class="navbar-item">
                                Upload a Talent Photo
                            </a>
                            <a class="navbar-item">
                                Delete existing Talent Photo (WIP)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <!-- @Scripts.Render("~/bundles/bootstrap") -->
    @RenderSection("scripts", required: false)
</body>
</html>
